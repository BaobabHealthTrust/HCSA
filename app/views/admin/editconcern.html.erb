<div class="concern edit">
  <h2>Update Concerns</h2>

  <%= form_for(:concern, :url => {:action => 'update', :id => @concern.id}) do |f| %>
  
    <table summary="Concern form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
     
    </table>
    
    <div class="form-buttons">
      <%= submit_tag("Update Subject") %>
    </div>
    
  <% end %>

<%= link_to("<< Return to List", {:action => 'listconcerns'}, :class => 'back-link') %>  

</div>
