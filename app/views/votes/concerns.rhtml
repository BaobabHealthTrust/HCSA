<html>
    <head>
	<title>concerns</title>	


	<style style="text/css">
	input[type=checkbox].css-checkbox {
							display:none;
				  }

						input[type=checkbox].css-checkbox + label.css-label {
							padding-left:35px;
							height:30px; 
							display:inline-block;
							line-height:30px;
							background-repeat:no-repeat;
							background-position: 0 0;
							color:  #197994; 
							font-size:30px;
							vertical-align:middle;
							cursor:pointer;

						}

						input[type=checkbox].css-checkbox:checked + label.css-label {
							background-position: 0 -30px;
						}
						label.css-label {
				background-image:url(../images/csscheckbox_463563ae6decfc874d90385dd7ff6b45.png);
				-webkit-touch-callout: none;
				-webkit-user-select: none;
				-khtml-user-select: none;
				-moz-user-select: none;
				-ms-user-select: none;
				user-select: none;							
			}		

		label {margin-right:20px;}

	</style>
  

    </head>
	
	
	
     <body>

	<center>
	
	<div id="header">
	 	 <div style="font-size: 32px;color: white;font-family:arial;margin-top:2.1%;">
           		 CHOOSE THE PROBLEMS YOU HAD IN <%=$service_selected.upcase %>
          	  		    
           	   </div>
	</center>

	 

	 <div style="padding-left: 450px;padding-top: 10px; background-colour:white;">
	<form action = "/votes/save_vote " method = "post" >
	
		<%@concerns.each do |t|%>
		
		<input type="checkbox" id= "<%= t.name %>" name= ""  class="css-checkbox" />   		
		<label for="<%= t.name %>"  class="css-label">&nbsp;&nbsp;<%= t.name %></label> <br><br>
		 <% end %>

		
		<%= hidden_field_tag("client_id", params[:client_id])%>
		<%= hidden_field_tag("service_choice", params[:service_choice])%>
		<%= hidden_field_tag("response", params[:response])%>
         
		<br>
	<input style="border-radius: 10px;
          	 	background-color: #197994; 
			padding-left: 30px;
			padding-right: 30px;  
          		width: 200px; 
			height: 60px;
			font-size: 38px;
			color: #eaeaea;
			text-decoration: none;
			text-align:center;
			line-height: 3.00;
			font-family:arial;"  
		type="submit" value="Submit"/>      
	
	</form>
	</div>



    </body>


</html>


        
